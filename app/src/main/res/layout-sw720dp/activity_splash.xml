<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/checkconnection"
    tools:context="com.org.tkru.pestlibrary.SplashActivity"
    android:background="@mipmap/splash" >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:background="@drawable/splashicon"
        android:layout_centerInParent="true"/>

    <com.org.tkru.pestlibrary.model.FooterBarLayout
        android:layout_width="match_parent"
        android:id="@+id/create_team_proceed"
        android:background="@color/black"
        android:layout_height="30dp"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/add_opponent"
                android:layout_width="wrap_content"
                android:text="@string/copyright"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.org.tkru.pestlibrary.model.FooterBarLayout>
</android.support.design.widget.CoordinatorLayout>