<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:background="@drawable/redbackground"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/pest_sub_grid_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
        </LinearLayout>
    <TextView
        android:id="@+id/pest_sub_grid_item_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/pest_sub_main_item_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/pest_sub_grid_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="visible"
        android:maxLines="1"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/pest_sub_grid_item_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/pest_sub_grid_banner_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/pest_sub_grid_footer_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/pest_sub_grid_contains"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>